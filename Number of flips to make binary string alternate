def string(s):
    n=len(s)
    c1=0
    c2=0
    for i in range(n):
        if (i&1 and s[i]=='0'): c1+=1
        if (i%2==0 and s[i]=='1'): c1+=1
        if (i&1 and s[i]=='1'): c2+=1
        if (i%2==0 and s[i]=='0'): c2+=1
    ans=min(c1,c2)
    return ans
for i in range(int(input())
    s=input()
    print(string(s))
